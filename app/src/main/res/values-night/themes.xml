<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Loonly" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryVariant">@color/blueVariant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellowPrimary</item>
        <item name="colorSecondaryVariant">@color/YellowVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Gray -->
    <style name="TextStyles.Raleway.Gray" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grayLight</item>
    </style>


    <!-- Dark -->
    <style name="TextStyles.Raleway.Dark" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- Light -->
    <style name="TextStyles.Raleway.Light" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Button.Transparent">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Transparent.Watchlist">
        <item name="android:drawableStart">@drawable/ic_add_light</item>
    </style>

    <style name="Button.Transparent.Share">
        <item name="android:drawableStart">@drawable/ic_share_light</item>
    </style>

</resources>