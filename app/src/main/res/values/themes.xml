<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Loonly" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryVariant">@color/blueVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellowPrimary</item>
        <item name="colorSecondaryVariant">@color/YellowVariant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  App Bar Section  -->
    <style name="Theme.Loonly.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.TabsFont" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/pacifico</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.Loonly.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Loonly.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--  Side Nav  -->
    <style name="SideNav" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/white</item>
    </style>

    <!--  Splash Screen Theme-->
    <style name="SplashTheme" parent="Theme.Loonly.NoActionBar">
        <item name="android:windowBackground">@drawable/layer_splash_background</item>
    </style>

    <!--  TEXT STYLES  -->
    <style name="TextStyles" parent="Widget.AppCompat.TextView" />

    <style name="TextStyles.Raleway">
        <item name="android:fontFamily">@font/raleway</item>
    </style>


    <!-- Gray -->
    <style name="TextStyles.Raleway.Gray" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grayDark</item>
    </style>

    <!--  Gray Small  -->
    <style name="TextStyles.Raleway.Gray.Small">
        <item name="android:textSize">12sp</item>
    </style>


    <!-- Dark -->
    <style name="TextStyles.Raleway.Dark" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <!--  Dark Large  -->
    <style name="TextStyles.Raleway.Dark.Large">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <!--  Dark Regular  -->
    <style name="TextStyles.Raleway.Dark.Regular">
        <item name="android:textSize">14sp</item>
    </style>


    <!-- Light -->
    <style name="TextStyles.Raleway.Light" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--  Light Large  -->
    <style name="TextStyles.Raleway.Light.Large">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <!--  Light Regular  -->
    <style name="TextStyles.Raleway.Light.Regular">
        <item name="android:textSize">14sp</item>
    </style>


    <!--  BUTTON STYLES -->
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Button.Transparent">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button.Transparent.Watchlist">
        <item name="android:drawableStart">@drawable/ic_add_dark</item>
    </style>

    <style name="Button.Transparent.Share">
        <item name="android:drawableStart">@drawable/ic_share_dark</item>
    </style>
</resources>