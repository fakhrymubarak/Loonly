<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Loonly" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryBrand</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/redBrand</item>
        <item name="colorSecondaryVariant">@color/redVariant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  App Bar Section  -->
    <style name="Theme.Loonly.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.TabsFont" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/pacifico</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.Loonly.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Loonly.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--  Splash Screen Theme-->
    <style name="SplashTheme" parent="Theme.Loonly.NoActionBar">
        <item name="android:windowBackground">@drawable/layer_splash_background</item>
    </style>


    <!--  TEXT STYLES  -->
    <style name="TextStyles" parent="Widget.AppCompat.TextView" />

    <style name="TextStyles.Raleway">
        <item name="android:fontFamily">@font/raleway</item>
    </style>

    <!-- Gray -->
    <style name="TextStyles.Raleway.Gray" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- White -->
    <style name="TextStyles.Raleway.Light" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--  Large  -->
    <style name="TextStyles.Raleway.Light.Large">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <!--  Regular  -->

    <style name="TextStyles.Raleway.Light.Regular">
        <item name="android:textSize">14sp</item>
    </style>

    <!--  Small  -->
    <style name="TextStyles.Raleway.Gray.Small">
        <item name="android:textSize">12sp</item>
    </style>


    <!--  BUTTON STYLES -->
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Button.Transparent">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.TextBold">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

</resources>